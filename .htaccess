<IfModule mod_rewrite.c>
    RewriteEngine On

    # If the request is already pointing at a real file or directory, serve it.
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise, forward everything into the Laravel public front controller.
    RewriteRule ^ public/index.php [L]
</IfModule>
